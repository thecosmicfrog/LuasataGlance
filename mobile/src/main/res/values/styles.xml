<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Overrides. -->
    <style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/LuasAtAGlanceActionBar</item>
        <item name="actionBarStyle">@style/LuasAtAGlanceActionBar</item>

        <!-- Change general color accent to the Luas shade of purple. -->
        <item name="colorAccent">@color/luas_purple</item>

        <!-- Hack to change SettingsActivity toolbar color and back button to white. -->
        <item name="toolbarStyle">@style/toolbar_settings</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="toolbar_settings" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="LuasAtAGlanceTabLayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LuasAtAGlanceActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/luas_purple</item>
        <item name="background">@color/luas_purple</item>
    </style>

</resources>
