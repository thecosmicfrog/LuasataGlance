<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_green_line"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="org.thecosmicfrog.luasataglance.activity.MainActivity$LineFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/greenline_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <org.thecosmicfrog.luasataglance.view.SpinnerCardView
        android:id="@+id/greenline_spinner_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/greenline_swiperefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/greenline_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:clipToPadding="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="80dp">

                <org.thecosmicfrog.luasataglance.view.StatusCardView
                    android:id="@+id/greenline_statuscardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />

                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                    android:id="@+id/tutorialcardview_select_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                    android:id="@+id/tutorialcardview_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <org.thecosmicfrog.luasataglance.view.TutorialCardView
                    android:id="@+id/tutorialcardview_favourites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                    android:id="@+id/greenline_inbound_stopforecastcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <org.thecosmicfrog.luasataglance.view.StopForecastCardView
                    android:id="@+id/greenline_outbound_stopforecastcardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
