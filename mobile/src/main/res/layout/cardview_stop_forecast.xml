<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_direction"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/luas_purple"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white" />

        <TableLayout
            android:id="@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tablerow_stop1"
                android:background=
                    "@android:drawable/list_selector_background">

                <TextView
                    android:id="@+id/textview_stop1_name"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textview_stop1_time"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:visibility="visible"
                android:background="@color/stop_forecast_border_grey" />

            <TableRow
                android:id="@+id/tablerow_stop2"
                android:background=
                    "@android:drawable/list_selector_background">

                <TextView
                    android:id="@+id/textview_stop2_name"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textview_stop2_time"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:visibility="visible"
                android:background="@color/stop_forecast_border_grey" />

            <TableRow
                android:id="@+id/tablerow_stop3"
                android:background=
                    "@android:drawable/list_selector_background">

                <TextView
                    android:id="@+id/textview_stop3_name"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textview_stop3_time"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </TableRow>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.6dp"
                android:visibility="visible"
                android:background="@color/stop_forecast_border_grey" />

            <TableRow
                android:id="@+id/tablerow_stop4"
                android:background=
                    "@android:drawable/list_selector_background">

                <TextView
                    android:id="@+id/textview_stop4_name"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textview_stop4_time"
                    android:gravity="center_horizontal"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</merge>